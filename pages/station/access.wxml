<view class="page">
  <view class="flex-row border-bottom">
  	<view class="plr30">
  		<text class="text-h3">接入码：</text>
  	</view>
	<view class="flex-auto">
		<input bindinput="tokenChange" value="{{token}}" maxlength="8" type="text" placeholder="8位长TOKEN码" minlength="4" auto-focus/>	
	</view>
  <view class="btn-icon m15" bindtap="clear" wx:if="{{tokenLength}}">
    <image class="icon" src="/images/icons/delete.png"/>
  </view>
  <view class="divider-vert plr15"></view>
	<view class="btn-icon m15" bindtap="access">
		<image class="icon" src="/images/icons/arrow-right.png"/>
	</view>
  </view>
  <view class="pane">
  	<view class="text-center">
  		<text class="text-h2">微信客户端接入</text>	
  	</view>
  	
  </view>
</view>
